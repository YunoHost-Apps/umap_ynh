#!/bin/bash

#=================================================
# IMPORT GENERIC HELPERS
#=================================================

source /usr/share/yunohost/helpers

#=================================================
# SETTINGS
#=================================================
ynh_script_progression "Storing installation settings..."

secret_key=$(ynh_string_random --length=32)
ynh_app_setting_set --key=secret_key --value=$secret_key

redis_db=$(ynh_redis_get_free_db)
ynh_app_setting_set --key=redis_db --value="$redis_db"

admin_mail=$(ynh_user_get_info --username=$admin --key=mail)
ynh_app_setting_set --key=admin_mail --value=$admin_mail

timezone="$(timedatectl show --value --property=Timezone)"
ynh_app_setting_set --key=timezone --value=$timezone

mail_user="noreply"

#=================================================
# DOWNLOAD, CHECK AND UNPACK SOURCE
#=================================================
ynh_script_progression "Setting up source files..."

ynh_setup_source --dest_dir="$install_dir"

#=================================================
# SETUP LOGROTATE
#=================================================
ynh_script_progression "Configuring log rotation..."

mkdir -p "/var/log/$app"
chown -R "$app:www-data" "/var/log/$app"
ynh_config_add_logrotate

#=================================================
# copy config files
# ================================================
ynh_script_progression "Create $app configuration files..."

mkdir -p $install_dir/umap/settings
ynh_config_add --template=".env.example" --destination="$install_dir/umap/settings/.env"
chmod 400 "$install_dir/umap/settings/.env"
chown "$app:$app" "$install_dir/umap/settings/.env"

#=================================================
# copy icon files
# ================================================
ynh_script_progression "copy icons..."
cp -r ../conf/icons "$data_dir/icons"

#=================================================
# MIGRATE / COLLECTSTATIC / CREATEADMIN
#=================================================
ynh_script_progression "Deploying $app..."

pushd $install_dir
    mkdir -p "$install_dir/data" "$install_dir/static" 
    python -m venv venv
    source venv/bin/activate
    pip install pyyaml
    pip install umap-project[deploy,sync]==3.5.0
    pip install gunicorn
    ynh_config_add --template="base.py" --destination="$install_dir/umap/settings/base.py"
    ynh_psql_db_shell $db_name <<< "CREATE EXTENSION IF NOT EXISTS postgis;"
    ynh_psql_db_shell $db_name <<< "CREATE EXTENSION IF NOT EXISTS unaccent;"
    python manage.py collectstatic --noinput
    python manage.py migrate
    DJANGO_SUPERUSER_USERNAME=$admin DJANGO_SUPERUSER_EMAIL=$admin_mail DJANGO_SUPERUSER_PASSWORD=$password python manage.py createsuperuser --noinput
    deactivate
popd

chown -R "$app:www-data" "$install_dir"

#=================================================
# SYSTEM CONFIGURATION
#=================================================
ynh_script_progression "Adding system configurations related to $app..."

ynh_config_add_nginx

ynh_config_add_systemd

yunohost service add "$app" --description="Create maps with OpenStreetMap layers" --log="/var/log/$app/$app.log"

#=================================================
# Start the app server via systemd
#=================================================
ynh_script_progression "Starting systemd service '$app'..."

ynh_systemctl --service=$app --action="start"

#=================================================
# END OF SCRIPT
#=================================================

ynh_script_progression "Installation of $app completed"
