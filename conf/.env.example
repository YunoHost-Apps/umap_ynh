# Secret Key...
SECRET_KEY=__SECRET_KEY__

# Set to True for development, False for production.
DEBUG=False

# Comma-separated list of host/domain names that this site can serve.
ALLOWED_HOSTS=localhost,127.0.0.1,__DOMAIN__

# List of IP addresses that are treated as internal
INTERNAL_IPS=127.0.0.1

# List of trusted origins for CSRF
CSRF_TRUSTED_ORIGINS=https://__DOMAIN____PATH__

# List of admins to receive error emails.
ADMINS=(__ADMIN__, __ADMIN_MAIL__)

# Connection string for the database.
# Format: postgis://USER:PASSWORD@HOST:PORT/NAME
DATABASE_URL=postgis://__DB_USER__:__DB_PWD__@localhost:5432/__DB_NAME__

# The main URL.
SITE_URL=http://__DOMAIN____PATH__

# A shorter URL for sharing links
SHORT_SITE_URL=none

# Static and Media file locations (absolute paths).
STATIC_ROOT=static
MEDIA_ROOT=uploads

# Allow anonymous users to create maps : boolean
UMAP_ALLOW_ANONYMOUS=__UMAP_ALLOW_ANONYMOUS__

# Allow users to edit their profiles : boolean
UMAP_ALLOW_EDIT_PROFILE=__UMAP_ALLOW_EDIT_PROFILE__

# Number of versions of a map to keep in history.
UMAP_KEEP_VERSIONS=10

# Is this a demo site?
UMAP_DEMO_SITE=False

# Put the site in read-only mode (maintenance mode).
UMAP_READONLY=False

# Default starting coordinates and zoom for new maps.
# LEAFLET_LONGITUDE=2
# LEAFLET_LATITUDE=51
# LEAFLET_ZOOM=6

# Enable standard username/password login : boolean
ENABLE_ACCOUNT_LOGIN=__ENABLE_ACCOUNT_LOGIN__

# Enable realtime collaboration
REALTIME_ENABLED=__REALTIME_ENABLED__

# Force HTTPS for social auth redirects (Set True if you are using SSL/HTTPS).
SOCIAL_AUTH_REDIRECT_IS_HTTPS=True

# OpenStreetMap OAuth2 Credentials
# SOCIAL_AUTH_OPENSTREETMAP_OAUTH2_KEY=
# SOCIAL_AUTH_OPENSTREETMAP_OAUTH2_SECRET=

# WebSocket/Realtime features (Redis).
REALTIME_ENABLED=True

# Redis URL for caching and realtime features.
REDIS_URL=redis://localhost:6379/__REDIS_DB__

# API Key for OpenRouteService (for routing/directions features).
# OPENROUTESERVICE_APIKEY=

# SMTP server host (e.g., smtp.gmail.com, localhost, your-domain.com)
EMAIL_HOST='__DOMAIN__'

# SMTP server port (typically 587 for TLS, 465 for SSL, 25 for non-secure)
EMAIL_PORT=587

# Use TLS encryption (True/False)
EMAIL_USE_TLS=True

# SMTP server username (usually your email address)
EMAIL_HOST_USER='__MAIL_USER__'

# SMTP server password (use app password for Gmail, normal password for others)
EMAIL_HOST_PASSWORD='__MAIL_PWD__'

# Default from email address (should match EMAIL_HOST_USER)
DEFAULT_FROM_EMAIL='__MAIL_USER__@__DOMAIN__'

SERVER_EMAIL='__MAIL_USER__@__DOMAIN__'
